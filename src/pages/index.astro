---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />

    <main class="flex flex-col gap-16">
      <!-- HERO SECTION -->
      <section
        id="hero"
        class="min-h-[60vh] flex items-center justify-center text-center px-4 py-12"
      >
        <div class="hero-content">
          <h1
            id="hero-title"
            class="text-2xl sm:text-4xl lg:text-5xl font-bold mb-4 bg-gradient-to-r from-blue-700 to-blue-400 bg-clip-text text-transparent"
          >
            Hi, I'm {SITE_TITLE}
          </h1>
          <p
            class="text-xl text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto"
          >
            
          </p>
          <div class="flex gap-4 justify-center flex-wrap">
            <a
              href="https://github.com/bachboy0"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-block px-6 py-3 rounded-lg font-semibold transition-all duration-300 bg-gradient-to-r from-blue-500 to-blue-700 text-white! hover:shadow-lg hover:-translate-y-0.5"
            >
              My GitHub
            </a>
            <a
              href="/blog"
              class="inline-block px-6 py-3 rounded-lg font-semibold transition-all duration-300 bg-gray-200 dark:bg-gray-700 text-blue-100! dark:text-white border-2 border-blue-300 hover:bg-blue-300 hover:-translate-y-0.5"
            >
              Read Blog
            </a>
            <a
              href="/about"
              class="inline-block px-6 py-3 rounded-lg font-semibold transition-all duration-300 bg-transparent text-blue-500 border-2 border-blue-300 hover:bg-blue-300 hover:text-white"
            >
              Learn More
            </a>
          </div>
          <div class="flex gap-4 justify-center flex-wrap mt-6">
            <a
              href="/tourosaka"
              class="inline-block px-6 py-3 rounded-lg font-semibold transition-all duration-300 bg-gradient-to-r from-red-500 to-red-700 hover:shadow-lg hover:-translate-y-0.5 text-white!"
            >
              Osaka Tourist Info
            </a>
          </div>
        </div>
      </section>
      <!-- BLOG PREVIEW SECTION -->
      <section id="blog-preview" class="text-center px-4 py-8">
        <h2 class="text-3xl font-bold mb-4">Latest Articles</h2>
        <p class="text-gray-600 dark:text-gray-400 mb-6">
          Sharing insights on web development, open source, and technology.
        </p>
        <p class="mt-6">
          <a
            href="/blog"
            class="inline-block px-6 py-3 rounded-lg font-semibold transition-all duration-300 bg-gray-200 dark:bg-gray-700 text-blue-700 dark:text-white border-2 border-blue-300 hover:bg-blue-300 hover:-translate-y-0.5"
          >
            View All Articles
          </a>
        </p>
      </section>

      <!-- FEATURED PROJECTS SECTION -->
      <section id="projects" class="px-4 py-8">
        <h2 class="text-3xl font-bold text-center mb-12">Featured Work</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
          <article
            class="p-6 rounded-xl bg-gradient-to-br from-blue-50 to-blue-900/5 dark:from-blue-900/10 dark:to-blue-800/5 border border-blue-100 dark:border-blue-700/20 transition-all duration-300 hover:border-blue-300 hover:shadow-lg hover:-translate-y-1"
          >
            <h3 class="text-blue-700 dark:text-blue-400 font-bold text-lg mt-0">
              Nginx Log Analyzer
            </h3>
            <p class="text-gray-600 dark:text-gray-400 my-2">
              Tool for analyzing and visualizing web server logs with real-time
              insights.
            </p>
            <span
              class="inline-block px-3 py-1 rounded-full bg-blue-500 text-white text-sm font-semibold"
              >Python</span
            >
          </article>
          <article
            class="p-6 rounded-xl bg-gradient-to-br from-blue-50 to-blue-900/5 dark:from-blue-900/10 dark:to-blue-800/5 border border-blue-100 dark:border-blue-700/20 transition-all duration-300 hover:border-blue-300 hover:shadow-lg hover:-translate-y-1"
          >
            <h3 class="text-blue-700 dark:text-blue-400 font-bold text-lg mt-0">
              Monte Carlo Simulation
            </h3>
            <p class="text-gray-600 dark:text-gray-400 my-2">
              Statistical simulation program using numpy and Matplotlib for
              probability analysis.
            </p>
            <span
              class="inline-block px-3 py-1 rounded-full bg-blue-500 text-white text-sm font-semibold"
              >Python</span
            >
          </article>
          <article
            class="p-6 rounded-xl bg-gradient-to-br from-blue-50 to-blue-900/5 dark:from-blue-900/10 dark:to-blue-800/5 border border-blue-100 dark:border-blue-700/20 transition-all duration-300 hover:border-blue-300 hover:shadow-lg hover:-translate-y-1"
          >
            <h3 class="text-blue-700 dark:text-blue-400 font-bold text-lg mt-0">
              Korean Learning Platform
            </h3>
            <p class="text-gray-600 dark:text-gray-400 my-2">
              Educational web platform for Korean language learners with
              interactive content.
            </p>
            <span
              class="inline-block px-3 py-1 rounded-full bg-blue-500 text-white text-sm font-semibold"
              >Web Dev</span
            >
          </article>
        </div>
        <p class="text-center text-lg mt-8">
          <a
            href="https://github.com/bachboy0"
            target="_blank"
            rel="noopener noreferrer"
            class="text-blue-500 font-semibold hover:text-blue-700 transition-colors duration-200"
          >
            See all projects ‚Üí
          </a>
        </p>
      </section>

      <!-- SKILLS SECTION -->
      <section
        id="skills"
        class="px-4 py-8 bg-gray-100 dark:bg-gray-800/50 rounded-xl mx-4"
      >
        <h2 class="text-3xl font-bold text-center mb-8">Skills & Expertise</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <div>
            <h3 class="text-blue-700 dark:text-blue-400 font-bold text-lg mb-4">
              Languages
            </h3>
            <ul class="list-none p-0 m-0">
              <li class="list-none py-2 text-gray-800 dark:text-gray-200">
                <span class="text-green-600 font-bold mr-2">‚úì</span>Python
              </li>
              <li class="list-none py-2 text-gray-800 dark:text-gray-200">
                <span class="text-green-600 font-bold mr-2">‚úì</span>JavaScript
              </li>
            </ul>
          </div>
          <div>
            <h3 class="text-blue-700 dark:text-blue-400 font-bold text-lg mb-4">
